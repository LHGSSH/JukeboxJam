<Window x:Class="Jukebox_Heros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jukebox_Heros"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button x:Name="Upload_Song_Button" Content="Upload Music" HorizontalAlignment="Left" Margin="568,322,0,0" VerticalAlignment="Top" Width="128" FontSize="16" FontWeight="Bold" Background="#FFC94C4C"/>
        <ListBox x:Name="Song_List_Box" HorizontalAlignment="Left" Height="261" Margin="568,61,0,0" VerticalAlignment="Top" Width="128"/>
        <Button x:Name="Remove_Song_Button" Content="Remove" HorizontalAlignment="Left" Margin="568,36,0,0" VerticalAlignment="Top" Width="128" Height="25" Background="#FFEC7600" FontSize="16" FontWeight="Bold" />
        <Button x:Name="Play_Button" Content="Play" HorizontalAlignment="Left" Margin="168,332,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="Pause_Button" Content="Pause" HorizontalAlignment="Left" Margin="275,332,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="Stop_Button" Content="Stop" HorizontalAlignment="Left" Margin="381,332,0,0" VerticalAlignment="Top" Width="75"/>
        <MediaElement x:Name="Media_Element" LoadedBehavior="Manual" HorizontalAlignment="Left" Height="100" Margin="220,85,0,0" VerticalAlignment="Top" Width="100"/>
        <Slider x:Name="Song_Slider" Thumb.DragStarted="Song_Slider_DragStarted" Thumb.DragCompleted="Song_Slider_DragCompleted" HorizontalAlignment="Left" Margin="53,279,0,0" VerticalAlignment="Top" Width="472"/>

    </Grid>
</Window>
