<Window x:Class="Jukebox_Heros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jukebox_Heros"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button x:Name="Upload_Song_Button" Content="Upload Music" HorizontalAlignment="Left" Margin="568,322,0,0" VerticalAlignment="Top" Width="128" FontSize="16" FontWeight="Bold" Background="#FFC94C4C"/>
        <ListBox x:Name="Song_List_Box" HorizontalAlignment="Left" Height="261" Margin="568,61,0,0" VerticalAlignment="Top" Width="128"/>
        <Button x:Name="Remove_Song_Button" Content="Remove" HorizontalAlignment="Left" Margin="568,36,0,0" VerticalAlignment="Top" Width="128" Height="25" Background="#FFEC7600" FontSize="16" FontWeight="Bold" />
        <Button x:Name="Play_Button" Content="Play" HorizontalAlignment="Left" Margin="112,360,0,0" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="Pause_Button" Content="Pause" HorizontalAlignment="Left" Margin="204,360,0,0" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="Stop_Button" Content="Stop" HorizontalAlignment="Left" Margin="295,360,0,0" VerticalAlignment="Top" Width="65"/>
        <MediaElement x:Name="Media_Element" LoadedBehavior="Manual" HorizontalAlignment="Left" Height="100" Margin="220,85,0,0" VerticalAlignment="Top" Width="100"/>
        <Slider x:Name="Song_Slider" Thumb.DragStarted="Song_Slider_DragStarted" Thumb.DragCompleted="Song_Slider_DragCompleted" ValueChanged="Song_Slider_ValueChanged" HorizontalAlignment="Left" Margin="101,309,0,0" VerticalAlignment="Top" Width="451"/>
        <TextBlock x:Name="Song_Time_Text" Text="00:00:00" HorizontalAlignment="Left" Margin="47,311,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="Next_Button" Content="Next" HorizontalAlignment="Left" Margin="473,360,0,0" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="Previous_Button" Content="Previous" HorizontalAlignment="Left" Margin="382,360,0,0" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="Song_Library_Save_Button" Content="Save Song Library" Click="Song_Library_Save_Button_Click" HorizontalAlignment="Left" Margin="27,337,0,0" VerticalAlignment="Top" Width="101"/>

    </Grid>
</Window>
